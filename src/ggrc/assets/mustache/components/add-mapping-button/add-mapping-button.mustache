{{#is_allowed 'update' parentInstance context='for'}}
    <i class="fa fa-code-fork action-toolbar__item-icon"
       rel="tooltip"
       data-placement="right"
       data-toggle="unified-mapper"
       data-join-object-id="{{parentInstance.id}}"
       data-join-object-type="{{parentInstance.class.shortName}}"
       data-original-title="Map {{firstnonempty mappingType 'Object'}} to this {{firstnonempty instance.class.title_singular 'Object'}}"
    ></i>
{{/is_allowed}}
